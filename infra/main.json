{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.16.2.56959",
      "templateHash": "18435628427506955305"
    }
  },
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region for resources"
      }
    },
    "appName": {
      "type": "string",
      "defaultValue": "fastservice",
      "metadata": {
        "description": "Application name prefix"
      }
    },
    "imageTag": {
      "type": "string",
      "defaultValue": "latest",
      "metadata": {
        "description": "Container image tag"
      }
    },
    "dockerHubImage": {
      "type": "string",
      "metadata": {
        "description": "Docker Hub image name (e.g., username/fastservice-api)"
      }
    },
    "existingAppServicePlanId": {
      "type": "string",
      "metadata": {
        "description": "Existing App Service Plan resource ID"
      }
    },
    "sqlConnectionString": {
      "type": "securestring",
      "metadata": {
        "description": "SQL Server connection string"
      }
    },
    "azureOpenAIApiKey": {
      "type": "securestring",
      "metadata": {
        "description": "Azure OpenAI API Key"
      }
    },
    "azureOpenAIEndpoint": {
      "type": "string",
      "defaultValue": "https://fastservice-resource.cognitiveservices.azure.com/",
      "metadata": {
        "description": "Azure OpenAI Endpoint"
      }
    },
    "azureOpenAIDeploymentName": {
      "type": "string",
      "defaultValue": "gpt-5-nano",
      "metadata": {
        "description": "Azure OpenAI Deployment Name"
      }
    },
    "repositoryUrl": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "GitHub repository URL for Static Web App"
      }
    },
    "repositoryBranch": {
      "type": "string",
      "defaultValue": "main",
      "metadata": {
        "description": "GitHub repository branch"
      }
    }
  },
  "variables": {
    "tags": {
      "Application": "[parameters('appName')]",
      "ManagedBy": "Bicep"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2023-12-01",
      "name": "[format('{0}-api', parameters('appName'))]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "kind": "app,linux,container",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "serverFarmId": "[parameters('existingAppServicePlanId')]",
        "httpsOnly": true,
        "siteConfig": {
          "alwaysOn": true,
          "ftpsState": "Disabled",
          "minTlsVersion": "1.2",
          "http20Enabled": true,
          "linuxFxVersion": "[format('DOCKER|{0}:{1}', parameters('dockerHubImage'), parameters('imageTag'))]",
          "healthCheckPath": "/health",
          "appSettings": [
            {
              "name": "WEBSITES_ENABLE_APP_SERVICE_STORAGE",
              "value": "false"
            },
            {
              "name": "DOCKER_ENABLE_CI",
              "value": "true"
            },
            {
              "name": "ConnectionStrings__FastServiceDb",
              "value": "[parameters('sqlConnectionString')]"
            },
            {
              "name": "AzureOpenAI__Endpoint",
              "value": "[parameters('azureOpenAIEndpoint')]"
            },
            {
              "name": "AzureOpenAI__DeploymentName",
              "value": "[parameters('azureOpenAIDeploymentName')]"
            },
            {
              "name": "AzureOpenAI__ApiKey",
              "value": "[parameters('azureOpenAIApiKey')]"
            },
            {
              "name": "AzureOpenAI__ApiVersion",
              "value": "2024-05-01-preview"
            },
            {
              "name": "ASPNETCORE_ENVIRONMENT",
              "value": "Production"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Web/staticSites",
      "apiVersion": "2023-12-01",
      "name": "[format('{0}-swa', parameters('appName'))]",
      "location": "eastus2",
      "tags": "[variables('tags')]",
      "sku": {
        "name": "Free",
        "tier": "Free"
      },
      "properties": {
        "repositoryUrl": "[parameters('repositoryUrl')]",
        "branch": "[parameters('repositoryBranch')]",
        "buildProperties": {
          "appLocation": "/frontend",
          "outputLocation": "build",
          "skipGithubActionWorkflowGeneration": true
        },
        "stagingEnvironmentPolicy": "Enabled",
        "allowConfigFileUpdates": true
      }
    },
    {
      "type": "Microsoft.Web/staticSites/config",
      "apiVersion": "2023-12-01",
      "name": "[format('{0}/{1}', format('{0}-swa', parameters('appName')), 'appsettings')]",
      "properties": {
        "REACT_APP_API_URL": "[format('https://{0}', reference(resourceId('Microsoft.Web/sites', format('{0}-api', parameters('appName'))), '2023-12-01').defaultHostName)]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', format('{0}-api', parameters('appName')))]",
        "[resourceId('Microsoft.Web/staticSites', format('{0}-swa', parameters('appName')))]"
      ]
    }
  ],
  "outputs": {
    "backendUrl": {
      "type": "string",
      "metadata": {
        "description": "Backend API URL"
      },
      "value": "[format('https://{0}', reference(resourceId('Microsoft.Web/sites', format('{0}-api', parameters('appName'))), '2023-12-01').defaultHostName)]"
    },
    "backendWebAppName": {
      "type": "string",
      "metadata": {
        "description": "Backend Web App name"
      },
      "value": "[format('{0}-api', parameters('appName'))]"
    },
    "frontendUrl": {
      "type": "string",
      "metadata": {
        "description": "Frontend Static Web App URL"
      },
      "value": "[format('https://{0}', reference(resourceId('Microsoft.Web/staticSites', format('{0}-swa', parameters('appName'))), '2023-12-01').defaultHostname)]"
    },
    "staticWebAppName": {
      "type": "string",
      "metadata": {
        "description": "Frontend Static Web App name"
      },
      "value": "[format('{0}-swa', parameters('appName'))]"
    }
  }
}